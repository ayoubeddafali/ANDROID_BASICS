<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.neo.tp.fragments.FirstFragment">


  <EditText
      android:id="@+id/first_fragment_input"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Enter a text to search for"
      android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/first_fragment_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="search"/>
        <Button
            android:id="@+id/first_fragment_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_margin="15dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/first_fragment_result"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:text=""
        android:textSize="20sp"
        android:layout_height="wrap_content" />


</LinearLayout>
